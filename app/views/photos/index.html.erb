<p id="notice"><%= notice %></p>

<h1>My Photos</h1>

<% if @photos.any? %>
    <% @photos.each do |photo| %>
        <%= image_tag photo.image.thumb.url %>
        <%= link_to 'Edit Description', edit_photo_path(photo) %>
        <%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
    <% end %>
<% end %>

<%= link_to 'Add Photo', new_photo_path %>
