<% content_for :title do %>Login<% end %>
<div class="container auth-login">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <%= image_tag image_url("logo1.png"), title: 'Taktyx', alt: 'Taktyx' %>
      <div class="panel panel-default login-section">
        <div class="panel-heading"><h4><i class="fa fa-sign-in"></i> Sign In</h4></div>
        <div class="panel-body">
          <div class="login-form-section">
            <form data-ng-submit="doSubmit($event)" data-ng-controller="authLoginCtrl" data-csrf="<%= form_authenticity_token %>">
              <div data-ng-class="(errors.email ? 'has-error' : '')" class="form-group">
                <input name="email" data-ng-model="auth.email" placeholder="Email" type="text" class="form-control"/>
                <span class="control-label" data-ng-bind="errors.email[0]"></span>
              </div>
              <div data-ng-class="(errors.password ? 'has-error' : '')" class="form-group">
                <input name="password" data-ng-model="auth.password" placeholder="Password" type="password" class="form-control"/>
                <span class="control-label" data-ng-bind="errors.password[0]"></span>
              </div>
              <div class="form-group">
                <a href="<%= password_resets_new_path %>">Forgot password?</a>
              </div>
              <div class="form-group">
                <button class="btn btn-success sign-in-button"><i class="fa fa-sign-in"></i> Sign In</button>
                <input data-ng-model="auth.remember" id="remember-me-checkbox" type="checkbox"/> <label for="remember-me-checkbox">Remember me</label>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div class="row">
        <div class="col-xs-6">
          <a href="<%= user_register_path  %>">Create An Account</a>
        </div>
      </div>
    </div>
  </div>
</div>
